<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatLib" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorGreen</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="Theme.Splash" parent="Theme.ChatLib">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryVariant">@color/colorGreen</item>
        <item name="colorOnPrimary">@color/colorGreen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>0
    </style>


    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.ChatLib.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="progress">
        <item name="colorAccent">@color/purple_700</item>
    </style>

    <style name="Theme.ChatLib.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChatLib.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Material.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">56dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/semi_bold</item>
        <item name="backgroundTint">@color/colorGreen</item>
    </style>


    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawablePadding">16sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputPasswordLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="hintEnabled">false</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/colorTextLight</item>
    </style>

    <style name="TexView.DropDown" parent="TextView">
        <item name="android:drawablePadding">16sp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down_24</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawablePadding">16sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="singleLine">true</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="fontFamily">@font/semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>a
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGreen</item>
        <item name="colorAccent">@color/colorGreen</item>
        <item name="colorPrimaryVariant">@color/colorGreen</item>
        <item name="colorOnPrimary">@color/colorGreen</item>
    </style>
</resources>